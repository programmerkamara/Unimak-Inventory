<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:contentDescription="App Logo"
        android:src="@drawable/unimak" />

    <!-- Title -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:text="UniMak Inventory Management"
        android:textColor="@color/purple_500"
        android:textSize="24sp"
        android:textStyle="bold" /> <!-- Set text color to black -->

    <!-- Login Page Title -->
    <TextView
        android:id="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:text="LOGIN PAGE"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/purple_500"
        android:textSize="24sp"
        android:textStyle="bold" /> <!-- Set text color to purple -->

    <!-- Email Input Field -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="#000529"
        app:hintTextAppearance="@color/purple_500"> <!-- Apply custom style -->

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#051F4E"
            android:hint="@string/email"
            android:padding="12dp"
            android:textColor="#710202"
            android:textColorHint="#010102"
            android:textColorLink="#A52121" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Password Input Field -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="#000529"
        app:hintTextAppearance="@color/purple_500">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#052175"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="#710202"
            android:textColorHighlight="#710909"
            android:textColorHint="#FA150303"
            android:textColorLink="#230404"
            android:visibility="visible" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Login Button -->
    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@color/purple_500"
        android:padding="16dp"
        android:text="Login"
        android:textColor="@android:color/white" />

</LinearLayout>
